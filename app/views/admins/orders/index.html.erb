<h3>注文履歴一覧</h3>
<table class="table table-bordered">
    <thead>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td><%= link_to admins_order_path(order) do %>
                    <%= order.created_at.strftime('%Y/%m/%d') %>
                <% end %></td>
                <td><%= order.costomer.family_name + order.costomer.middle_name %></td>
                <% order.ordered_products.each do |ordered_product| %>
                    <% @total_number += ordered_product.number %>
                <% end %>
                <td><%= @total_number %></td>
                <% @total_number = 0 %>
                <td><%= order.order_status %></td>
            </tr>
        <% end %>
    </tbody>
</table>