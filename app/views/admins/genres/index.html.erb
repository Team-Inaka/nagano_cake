<%= render 'layouts/errors', obj: @genre %>

<div class="row">
	<div class='col-xs-6'>

		<!-- ジャンル追加フォーム -->
		<h3 style='margin-bottom: 30px;'>ジャンル一覧・追加</h3>
		<%= form_for(@genre,url: admins_genres_path) do |f| %>
		  <div class="field row">
		  	<!-- ジャンルテキスト入力フォーム -->
		  	<div class='col-xs-5'>
		      <%= f.label :name,"ジャンル" %>
		      <%= f.text_field :name, class: 'genre_name' %>
			</div>

		    <!-- 有効無効ラジオボタン-->
		    <div class='col-xs-6'>
		      <%= f.radio_button :is_valid, :true, checked: "checked" %>
    		  <%= f.label :is_valid,"有効" %>
    		  <%= f.radio_button :is_valid, :false %>
    		  <%= f.label :is_valid,"無効" %>
    		  <%= f.submit "追加", class: 'btn btn-primary'%>
		   </div>
		  </div>
		<% end %>

		<!-- ジャンル一覧表示 -->
		<table class='table table-hover table-inverse'>
			<thead>
			    <tr> 
			      <th>ジャンル</th>
			      <th>状態</th>
			      <th></th>
			      <th colspan="3"></th>
			    </tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= (genre.is_valid==true) ? "有効" : "無効" %></td>
						<td><%= link_to "編集する", edit_admins_genre_path(genre), class: 'btn-sm btn-success edit_genres_' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	
	</div>
</div>