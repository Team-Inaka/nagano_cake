<%= render 'layouts/errors', obj: @genre %>

<div class="row">
	<div class='col-xs-6'>

		<!-- ジャンル編集フォーム -->
		<h3>ジャンル編集</h3>
		<%= form_for(@genre,url: admins_genre_path(@genre)) do |f| %>
		  <div class="field row">
		  	<!-- ジャンルテキスト入力フォーム -->
		    <%= f.label :name,"ジャンル" %>
		    <%= f.text_field :name, class: 'col-xs-6 genre_name' %>

		    <!-- 有効無効ラジオボタン-->
		    <%= f.radio_button :is_valid, :true, checked: "checked" %>
    		<%= f.label :is_valid,"有効" %>
    		<%= f.radio_button :is_valid, :false %>
    		<%= f.label :is_valid,"無効" %>

		    <%= f.submit "変更を保存する", class: 'btn btn-primary'%>
		  </div>
		<% end %>

	</div>
</div>