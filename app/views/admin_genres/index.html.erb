<%= render 'layouts/errors', obj: @genre %>

<div class="row">
	<div class='col-xs-6'>
		<h3>ジャンル一覧・追加</h3>

		ジャンル
<!-- 		<input type="text">
		<input type="radio" name="valid_status" value="有効">有効
		<input type="radio" name="valid_status" value="無効">無効

		<button type="button" class="btn btn-default">追加</button> -->

		<%= form_for(@genre,url: admin_genres_path) do |f| %>
		  <div class="field row">
		    <%= f.label :name %>
		    <%= f.text_field :name, class: 'col-xs-12 genre_name' %>
		  </div>

		  <div class="field row">
		    <%= f.radio_button :is_valid, :true, checked: "checked" %>
    		<%= f.label :is_valid,"有効" %>

    		<%= f.radio_button :is_valid, :false %>
    		<%= f.label :is_valid,"無効" %>
		  </div>

		  <div class="actions row">
		    <%= f.submit class: 'btn btn-primary col-xs-12'%>
		  </div>
		<% end %>

		<!-- foreachに変更-->
		<table class='table table-hover table-inverse'>
			<thead>
			    <tr> 
			      <th>ジャンル</th>
			      <th>状態</th>
			      <th></th>
			      <th colspan="3"></th>
			    </tr>
			</thead>

			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><% genre.name %></td>
						<td><% (genre.is_valid=='1')? "有効" : "無効" %></td>
						<td><%= link_to "編集する", admin_genres_path, class: 'btn-sm btn-success edit_genres_' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>