<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <nav class='nav navbar-nav navbar-left' >
          <div class="logo_user">
            <%= link_to (root_path) do %>
              <%= image_tag 'logo.png',:size =>'60x40' %>
            <% end %>
          </div>
        </nav>
      </div>

      <div class="col-xs-9">
        <nav>
          <ul class="nav navbar-nav navbar-right">
          <% if costomer_signed_in? %>
            <li class="welcome">ようこそ、<%= current_costomer.full_name %>さん！</li>
            <li><%= link_to 'カート', costomers_carts_path(current_costomer.id),class: 'btn btn-default' %></li>
            <li><%= link_to "商品一覧", costomers_products_path,class: 'btn btn-default' %></li>
            <li><%= link_to 'マイページ', costomers_costomer_path(current_costomer.id),class: 'btn btn-default' %></li>
            <li><%= link_to "ログアウト", destroy_costomer_session_path, method: :delete,class: 'btn btn-default' %></li>
          <% else %>
            <li>ゲスト（表示確認用）</li>
            <li><%= link_to "商品一覧", costomers_products_path,class: 'btn btn-default' %></li>
            <li><%= link_to "新規登録", new_costomer_registration_path,class: 'btn btn-default' %></li>
            <li><%= link_to "ログイン", new_costomer_session_path,class: 'btn btn-default' %></li>
          <% end %>
          </ul>
        </nav>
      </div>

    </div>
  </div>
</header>
