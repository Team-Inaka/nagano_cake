<%= render 'layouts/errors', obj: @product %>

<h3>商品新規登録</h3>
<div class="row">
	<!-- 商品登録フォーム -->
	<%= form_for([ :admin, @product ]) do |f| %>

	<!-- ３分割colのインデント強調してます -->
	 <div class='col-xs-4'>
		  <div class="form-group row">
			<%= attachment_image_tag @product, :image, :fill, 300, 300, fallback: "noimage.svg", size:'300x300'%>
			<%= f.attachment_field :image %>
		  </div>
	 </div>

	 <div class='col-xs-5'>
		   <div class="form-group row">
			 <label class="col-sm-3">商品名</label>
		      <div class="col-sm-9">
			    <%= f.text_field :name, class: 'col-xs-10 product_name' %>
			  </div>
		    </div>

		   <div class="form-group row">
			  <label class="col-sm-3">商品説明</label>
			   <div class="col-sm-9">
			     <%= f.text_area :explain, class: 'col-xs-10 explain' %>
			  </div>
		   </div>
					
		   <div class="form-group row">
			 <!-- DBからジャンル名とってくるはず -->
			  <label class="col-sm-3">ジャンル</label>
			   <div class="col-sm-9">
			      <%= f.collection_select :genre_id, Genre.where(is_valid: true), :id, :name, include_blank: "選択して下さい" %>
			   </div>
		   </div>

			<div class="form-group row">
			  <label class="col-sm-3">税抜価格</label>
			   <div class="col-sm-9">
			      <%= f.text_field :notax_price,class: 'col-xs-6 notax_price' %>円
			   </div>
			</div>

			<div class="form-group row">
			  <!-- 販売ステータスのセレクトボックス -->
			  <label class="col-sm-3">販売ステータス</label>
			   <div class="col-sm-9">
				  <%= f.select :is_valid, [["販売中", true],["売切れ", false]], include_blank: "選択して下さい" %>
			   </div>
			 </div>
	 </div>

	<div class='col-xs-3'>
			<div class="box">
					<div class="bottom-text">
						<%= f.submit "新規登録", class: 'btn btn-primary'%>
					</div>
			</div>
	<% end %><!-- form_forのend-->
    </div>

</div>
